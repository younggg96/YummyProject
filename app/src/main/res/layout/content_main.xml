<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background"
        >

        <fragment
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:id="@+id/begin_fragment"
            android:name="com.example.yummyproject.BeginFragment"
            android:layout_marginBottom="10dp"
            />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/item1_fragment"
            android:name="com.example.yummyproject.ItemsFragment"
            android:layout_marginBottom="10dp"
            />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/item2_fragment"
            android:name="com.example.yummyproject.ItemsFragment2"
            android:layout_marginBottom="10dp"
            />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/item3_fragment"
            android:name="com.example.yummyproject.ItemsFragment"
            android:layout_marginBottom="10dp"
            />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/item4_fragment"
            android:name="com.example.yummyproject.ItemsFragment"
            android:layout_marginBottom="10dp"
            />


    </LinearLayout>


</ScrollView>